<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.dontdrinkandroot</groupId>
		<artifactId>parent</artifactId>
		<version>4</version>
	</parent>
	<artifactId>cache</artifactId>
	<version>0.7.0-SNAPSHOT</version>
	<description>Simple caching framework</description>

	<developers>
		<developer>
			<name>Philip Washington Sorst</name>
			<url>http://sorst.net</url>
		</developer>
	</developers>

	<scm>
		<developerConnection>scm:git:https://github.com/dontdrinkandroot/cache.git</developerConnection>
	</scm>
	
	<repositories>
		<repository>
			<id>public</id>
			<url>http://maven.dontdrinkandroot.net/content/groups/public</url>
		</repository>
	</repositories>
	
	<build>
	
		<plugins>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemPropertyVariables>
						<cache.test.ramdisk>${cache.test.ramdisk}</cache.test.ramdisk>
						<cache.test.runloadtest>${cache.test.runloadtest}</cache.test.runloadtest>
					</systemPropertyVariables>
				</configuration>
			</plugin>

		</plugins>
		
	</build>

	<dependencies>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<scope>test</scope>
		</dependency>
		
	</dependencies>
	
</project>
